# FastAPI con GIBS NASA (NO necesita API key)
from fastapi import FastAPI
from fastapi.middleware.cors import CORSMiddleware

app = FastAPI()

app.add_middleware(
    CORSMiddleware,
    allow_origins=["*"],
    allow_methods=["*"],
    allow_headers=["*"],
)


@app.get("/")
def root():
    return {
        "message": "NASA GIBS Tile Proxy",
        "gibs_url": "https://gibs.earthdata.nasa.gov/wmts/epsg4326/best/",
        "example_layer": "MODIS_Terra_CorrectedReflectance_TrueColor"
    }


# Proxy para servir tiles de NASA
@app.get("/tiles/{layer}/{z}/{x}/{y}.png")
async def get_tile(layer: str, z: int, x: int, y: int):
    import httpx

    # URL base de GIBS
    gibs_url = f"https://gibs.earthdata.nasa.gov/wmts/epsg4326/best/{layer}/default/2024-10-01/250m/{z}/{y}/{x}.png"

    async with httpx.AsyncClient() as client:
        response = await client.get(gibs_url)
        return Response(content=response.content, media_type="image/png")



